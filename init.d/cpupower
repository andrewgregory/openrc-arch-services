change() {
	local c ret=0 opts="$1"
	shift
	ebegin "Running cpufreq-set ${opts}"
	for c in $(cpupower | awk '$1 == "CPU" { print $2 }') ; do
		cpufreq-set -c ${c} ${opts}
		: $(( ret += $? ))
	done
	eend ${ret}

	if [ $# -gt 0 ] ; then
		c=1
		einfo "Setting extra options: $*"
		if cd /sys/devices/system/cpu/cpufreq ; then
			local o v
			for o in "$@" ; do
				v=${o#*=}
				o=${o%%=*}
				echo ${v} > ${o} || break
			done
			c=0
		fi
		eend ${c}
		: $(( ret += c ))
	fi

	return ${ret}
}

start() {
	change "${START_OPTS}" ${SYSFS_EXTRA}
}

stop() {
	change "${STOP_OPTS}"
}
